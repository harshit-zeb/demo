<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/actBar"
            layout="@layout/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_phone_otp"/>

                <TextView
                    android:id="@+id/text_sendstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:text="@string/enter_otp_screen_lbl_desc"
                    android:textColor="@color/zebpay_base_grey"
                    android:textSize="@dimen/_11ssp"
                    app:fontFamily="@font/open_sans_regular"/>

                <TextView
                    android:id="@+id/txt_user_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/zebpay_main_blue"
                    android:textSize="@dimen/_18ssp"
                    app:fontFamily="@font/open_sans_regular"
                    tool:text="Mobile No"/>

                <!--<LinearLayout-->
                <!--android:id="@+id/layout_editcode"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/bg_rounded_rect_grey_border"-->
                <!--android:orientation="horizontal">-->

                <EditText
                    android:id="@+id/edit_verificationcode"
                    style="@style/RoundedBorderedEditText"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_27sdp"
                    android:gravity="center"
                    android:hint="@string/enter_otp_screen_txt_placeHolder"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="@dimen/_3sdp"
                    tool:text="848484"/>


                <!--</LinearLayout>-->

                <LinearLayout
                    android:id="@+id/ll_twilio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ll_timer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:visibility="gone"
                        tool:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/didn_t_get_a_verification_code_nget_verified_via_call_after"
                            android:textColor="@color/zebpay_base_grey"
                            android:textSize="@dimen/_11ssp"
                            app:fontFamily="@font/open_sans_regular"/>

                        <FrameLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_gravity="center_horizontal">

                            <ProgressBar
                                android:id="@+id/progress_timer"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="@dimen/_130sdp"
                                android:layout_height="@dimen/_130sdp"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/timer_progress"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_timer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:textColor="@color/zebpay_main_blue"
                                    android:textSize="@dimen/_26ssp"
                                    app:fontFamily="@font/open_sans_regular"
                                    tool:text="30"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="-10dp"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:text="@string/sec"
                                    android:textColor="@color/zebpay_light_grey"
                                    android:textSize="@dimen/_14ssp"
                                    app:fontFamily="@font/open_sans_regular"/>

                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:visibility="gone"
                        tool:visibility="gone">

                        <TextView
                            android:id="@+id/txt_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/blue_solid_rect_round"
                            android:includeFontPadding="false"
                            android:paddingStart="@dimen/_23sdp"
                            android:paddingLeft="@dimen/_23sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_23sdp"
                            android:paddingRight="@dimen/_23sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/call_me"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/open_sans_regular"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_retry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:visibility="gone">

                        <ProgressBar
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txt_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/zebpay_base_grey"
                            android:textSize="@dimen/_11ssp"
                            app:fontFamily="@font/open_sans_regular"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_blue_rounded_drawable"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/enter_otp_screen_verify_btn_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16sp"
                    app:fontFamily="@font/open_sans_regular"/>

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:src="@drawable/ic_right_arrow" />-->
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseThemeGrey" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/zebpay_main_blue</item>
        <item name="colorPrimaryDark">@color/zebpay_main_blue</item>
        <item name="colorControlNormal">@color/zebpay_light_grey</item>
        <item name="colorAccent">@color/zebpay_main_blue</item>
    </style>

    <style name="RobotoBoldTextAppearance">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:background">@color/zebpay_main_blue</item>
        <item name="android:titleTextAppearance">@style/RobotoBoldTextAppearance</item>
        <item name="titleTextAppearance">@style/RobotoBoldTextAppearance</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    <style name="passwordButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textColor">@color/zebpay_main_blue</item>
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SpinnerStyle" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="RoundedBorderedEditText">
        <item name="android:layout_height">@dimen/_33sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_rounded_edittext_selector</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/zebpay_base_grey</item>
        <item name="android:textColorHint">@color/zebpay_light_grey</item>
    </style>

    <style name="textStyleRipple">
        <item name="android:background">@null</item>
    </style>

    <style name="EditTextProfile" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/zebpay_light_grey</item>
        <item name="colorControlActivated">@color/zebpay_main_blue</item>
        <item name="colorControlHighlight">@color/zebpay_light_grey</item>
    </style>

</resources>